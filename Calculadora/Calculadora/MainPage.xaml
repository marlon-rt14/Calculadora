<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Calculadora.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label 
            Text="MI NOMBRE ES MARLON JAVIER RUIZ TARUCHAÍN"
            FontSize="Large"
            FontAttributes="Bold"
            VerticalOptions="StartAndExpand"
            HorizontalTextAlignment="Center" />
        <Button Text="Contar"
                Font="Large"
                BorderWidth="1"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Start"
                Clicked="OnButtonClicked"/>

        <Label Text="Mi primera aplicacion de prueba con Xamarin!!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Image Source="https://docs.microsoft.com/es-es/xamarin/xamarin-forms/xaml/xaml-controls-images/image.png"
               Aspect="AspectFill"
               HorizontalOptions="Center" />
        
        
    </StackLayout>

</ContentPage>
